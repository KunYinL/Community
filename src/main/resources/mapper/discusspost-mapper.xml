<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tassel.mapper.DiscussPostMapper">
    <sql id="selectFields">
        `id`, `user_id`, `title`, `content`, `type`, `status`, `create_time`, `comment_count`, `score`
    </sql>

    <sql id="insertFields">
        `user_id`, `title`, `content`, `type`, `status`, `create_time`, `comment_count`, `score`
    </sql>

    <select id="selectDiscussPosts" resultType="com.tassel.entity.DiscussPost">
        select
        <include refid="selectFields"></include>
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by type desc, create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="selectDiscussPostRows" resultType="int">
        select count(id)
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
    </select>

    <select id="selectDiscussPostById" resultType="com.tassel.entity.DiscussPost">
        select
        <include refid="selectFields"/>
        from discuss_post
        where id = #{id}
    </select>

    <insert id="insertDiscussPost" parameterType="com.tassel.entity.DiscussPost">
        insert into discuss_post(<include refid="insertFields"/>)
        values (#{userId}, #{title}, #{content}, #{type}, #{status}, #{createTime}, #{commentCount}, #{score})
    </insert>

    <update id="updateCommentCount">
        update community.discuss_post set comment_count = #{commentCount} where id = #{id}
    </update>
</mapper>